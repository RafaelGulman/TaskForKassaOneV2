@{
    ViewData["Title"] = "Введите данные";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TaskForKassaOneV2.Models.Loan



<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form method="post">
                <span asp-validation-for="BeginLoan">Введите дату</span>
                <div class="input-group mb-3">
                  <span class="input-group-text" >Введите дату заема</span>
                  <input type="date" asp-for="BeginLoan" class="form-control">
                </div>
                <span asp-validation-for="LoanAmount">Некорректное значение</span>
                <div class="input-group mb-3">
                  <input type="number" class="form-control" asp-for="LoanAmount" placeholder="Введите сумму кредита" >
                </div>
                <span asp-validation-for="LoanPeriods">Некорректное значение</span>
                <div class="input-group mb-3">
                  <input type="number" class="form-control" asp-for="LoanPeriods" placeholder="Введите количество периодов" >
                
                    <select class="custom-select m-lg-1" name="MonthLoan">
                        <option selected value="1">Месяцев</option>
                        <option value="0">Дней</option>
                    </select>
                </div>
                
                <span asp-validation-for="Rate" >Некоректное значение</span>
                <div class="input-group mb-3">
                  <input type="number" class="form-control" asp-for="Rate" placeholder="Введите годовой процент кредита" >
                  <label>%</label>
                </div>
                <button type="submit" class="btn btn-outline-success">Рассчитать</button>
            </form>
        </div>
         <div class="col"></div>
    </div>
</div>


